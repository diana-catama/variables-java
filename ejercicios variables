import java.util.Scanner;

public class ejerciciosvariables {
    public static void ejerciciopromedio(){
        Scanner scanner = new Scanner(System.in);
        System.out.println("ingrese su primera nota: ");
        int nota1 = scanner.nextInt();
        System.out.println("ingrese su segunda nota: ");
        int nota2 = scanner.nextInt();
        System.out.println("ingrese su tercera nota: ");
        int nota3 = scanner.nextInt();

        float promedio = (nota1 + nota2 + nota3) / 3f;
        System.out.println("el promedio de sus notas es: " + promedio);
    }

    public static void ejercicioperfil(){
        Scanner scanner = new Scanner(System.in);
        System.out.println("ingrese su nombre: ");
        String nombre = scanner.nextLine();
        scanner.nextLine();
        System.out.println("ingrese su edad: ");
        int edad = scanner.nextInt();
        scanner.nextLine();
        System.out.println("ingrese su nacionalidad");
        String nacionalidad = scanner.nextLine();
        scanner.nextLine();
        System.out.println("ingrese su ocupacion");
        String ocupacion = scanner.nextLine();
        scanner.nextLine();
        System.out.println("ingrese su salario mensual");
        float salario = scanner.nextFloat();

        int a単oNacimiento = 2025 - edad;
        System.out.println(" su nombre es " + nombre + ", tiene " + edad + " a単os, su nacionalidad es " + nacionalidad + ", su ocupacion es " + ocupacion + " y su salario mensual es $" + salario);
        System.out.println("usted nacio en el a単o " + a単oNacimiento);
    }
}
